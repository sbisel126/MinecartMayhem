import org.bukkit.ChatColor;
import org.bukkit.Material;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.meta.ItemMeta;
import org.bukkit.plugin.java.JavaPlugin;

public class Itemtesting extends JavaPlugin {

    private ItemHandler itemHandler;

    @Override
    public void onEnable() {
        itemHandler = new ItemHandler(this);
        getServer().getPluginManager().registerEvents(itemHandler, this);
        getLogger().info("ItemTesting plugin has been enabled!");
    }

    @Override
    public void onDisable() {
        getLogger().info("ItemTesting plugin has been disabled.");
    }

    @Override
    public boolean onCommand(CommandSender sender, Command command, String label, String[] args) {
        if (label.equalsIgnoreCase("getitemboxwand")) {
            if (sender instanceof Player player) {
                ItemStack wand = new ItemStack(Material.STICK);
                ItemMeta meta = wand.getItemMeta();
                meta.setDisplayName(ChatColor.LIGHT_PURPLE + "Item Box Wand");
                wand.setItemMeta(meta);
                player.getInventory().addItem(wand);
                player.sendMessage(ChatColor.AQUA + "You received the Item Box Wand!");
                return true;
            } else {
                sender.sendMessage("This command can only be run by a player.");
            }
        }
        return false;
    }
}
